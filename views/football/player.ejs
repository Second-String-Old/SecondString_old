<!DOCTYPE html>
<html>
    <head>
        <% include ../head %>
    </head>
    <body>
        <!-- navigation Bar -->
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Second String</a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <!-- navigation tabs -->
                    <ul class="nav navbar-nav">
                        <!-- Home -->
                        <li><a href="/">Home</a></li>
                        <!-- Football -->
                        <li role="presentation" class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Football
                            </a>
                            <ul class="dropdown-menu">
                                <a href="/football/players">Player Stats</a>
                                <a href="/football/teams">Team Stats</a>
                                <a href="/football/games">Upcoming Games</a>
                            </ul>
                        </li>
                        <!-- Soccer -->
                        <li role="presentation" class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Soccer
                            </a>
                            <ul class="dropdown-menu">
                                <a href="/soccer/matches">Today's Matches</a>
                                <a href="/soccer/players">Players</a>
                            </ul>
                        </li>
                        <!-- Baseball -->
                        <li role="presentation" class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Baseball
                            </a>
                            <ul class="dropdown-menu">
                                <a href="/baseball/players">Players</a>
                                <a href="/baseball/teams">Teams</a>
                            </ul>
                        </li>
                    </ul>
                    <!-- end navigation tabs -->
                    <!-- search bar -->
                    <form class="navbar-form navbar-right">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search">
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                    <!-- end search bar -->
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
        <!-- end navigation Bar -->

        <div>
            <h2><%=data.firstname + " " + data.lastname%></h2>
        </div>

        <% if (data.pos == "QB") { %>
        <div class="stats-table">
            <table>
                <thead>
                    <td>First Name</td>
                    <td>Last Name</td>
                    <td>Team</td>
                    <td>Completion Ratio</td>
                    <td>Interceptions</td>
                    <td>Passing Yards</td>
                    <td>Passing TDs</td>
                    <td>Rushing Yards</td>
                    <td>Rushing TDs</td>
                    <td>Fumbles</td>
                </thead>
                <tbody>
                    <td><%=data.firstname%></td>
                    <td><%=data.lastname%></td>
                    <td><%=data.team%></td>
                    <td><%=data.passing_cmp / data.passing_att%></td>
                    <td><%=data.passing_int%></td>
                    <td><%=data.passing_yds%></td>
                    <td><%=data.passing_tds%></td>
                    <td><%=data.rushing_yds%></td>
                    <td><%=data.rushing_tds%></td>
                    <td><%=data.fumbles_tot%></td>   
                </tbody>
            </table>
        </div>
        <% } else if (data.pos == "WR") { %>
        <div class="stats-table">
            <table>
                <thead>
                    <td>First Name</td>
                    <td>Last Name</td>
                    <td>Team</td>
                    <td>Receptions</td>
                    <td>Targeted</td>
                    <td>Receiving Yards</td>
                    <td>Receiving TDs</td>
                    <td>Fumbles</td>
                </thead>
                <tbody>
                    <td><%=data.firstname%></td>
                    <td><%=data.lastname%></td>
                    <td><%=data.team%></td>
                    <td><%=data.receiving_rec%></td>
                    <td><%=data.receiving_tar%></td>
                    <td><%=data.receiving_yds%></td>
                    <td><%=data.receiving_tds%></td>
                    <td><%=data.fumbles_tot%></td>   
                </tbody>
            </table>
        </div>
        <% } %>


        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Second String 2017</p>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </footer>

        <!-- jQuery -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="/javascripts/bootstrap.min.js"></script>
        <script src="/javascripts/update.js"></script>
  
    </body>
</html>
