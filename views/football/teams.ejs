    <div class="selections" >
      <table style="width:25%; float:left;">
        <tr>
          <td>Season</td>
          <td><a href="#">2016</a></td>
          <td><a href="#">2015</a></td>
          <td><a href="#">2014</a></td>
          <td><a href="#">2013</a></td>
          <td><a href="#">2012</a></td>
        </tr>
        <tr>
          <td>Week</td>
          <td><a href="#">7</a></td>
          <td><a href="#">6</a></td>
          <td><a href="#">5</a></td>
          <td><a href="#">4</a></td>
          <td><a href="#">3</a></td>
        </tr>
      </table>
      <div class="search">
        <form>
          <input type="text" name="team" id="teamSearch"><br>
          <input type="button" value="Search Team" onClick="javascript:searchTTeam(arr, 'Team')">
        </form>
<!--         <form>
          <input type="text" name="player" id="playerSearch"><br>
          <input type="button" value="Search Player" onClick="javascript:searchPlayer(arr, 'Team')">
        </form> -->
      </div>
    </div>
    
    <div class="stats">
      <table id="table">
        <tr class="header">
          <td><a href="javascript:Tsort('name', arr, 'Team')">Name</a></td>
          <td><a href="javascript:Tsort('div', arr, 'Div')">Division</a></td>
        </tr>
        <script>var arr = <%- JSON.stringify(data); %></script>
        <% for(i = 0; i < data.length, i < 10; i++){ %>
          <tr>
            <td><%=data[i].name %></td>
            <td><%=data[i].div %></td>
          </tr>
        <% } %>

      
      </table>
    </div>
      
   
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
